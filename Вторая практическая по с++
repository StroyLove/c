Вторая практическая

1
#include <iostream>
#include <cmath>
using namespace std;
int main(){
    int n,b,i,n2,z,x;
    i=0;
    z=0;
    x=0;
    cin>>n;
    cin>>b;
    n2=n;
    while (i==0){
        n=n+1;
        z=z+1;
        if (n%b==0){i=1;}
    }
    
    while(i==1){
        n2=n2-1;
        x=x+1;
        if (n2%b==0){i=2;}
    }
    if (z>x){
        cout<<n2;}
    else {
        cout<<n;
    }
return 0;
}

2
#include <iostream>
#include <cmath>
using namespace std;
int main(){
    int x,z;
    cout<<"Введите первый катет:";
    cin>>x;
    cout<<"Введите второй катет:";
    cin>>z;
    cout<<sqrt(pow(x,2)+pow(z,2))<<endl; 
return 0;
}


3
#include <iostream>
using namespace std;
int main(){
    int x,z;
    cout<<"Введите первое трехзначное число:";
    cin>>x;
    cout<<"Введите второе трехзначное число:";
    cin>>z;
    cout<<"Произведение:";
    cout<<x*z<<endl;
    cout<<"Сумма:";
    cout<<x+z<<endl;
    
return 0;
}





5
#include <iostream>
using namespace std;
int main() {
    int m,s,n,y;
    float p;
    cout<<"Введите сумму кредита:";
    cin>>n;
    cout<<"Введите количество лет на которое берете кредит:";
    cin>>y;
    cout<<"Введите процент:";
    cin>>p;
    s=n+(n*(p/100))*y;
    m=s/(y*12);
    cout<<"Месячные выплаты составляют:"<<m<<endl;
    cout<<"Суммарноя выплата:"<<s<<endl;
return 0;
}

