11
#include <iostream>
#include <cmath>
using namespace std;
int main(){
    int z;
        z=pow(10,2)-4*3;
    cout<<"x1="<<(10-sqrt(z))/6<<endl;
    cout<<"x2="<<(10+sqrt(z))/6<<endl;
return 0;
}



14.

#include <iostream>
using namespace std;
int main(){
    int z,x,c;
    c=z;
    z=x;
    x=c;
return 0;
}
